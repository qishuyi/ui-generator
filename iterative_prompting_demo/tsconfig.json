{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2021",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
